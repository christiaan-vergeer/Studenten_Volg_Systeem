@model Studenten_Volg_Systeem.ViewModels.ProfessorCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Aanpassen</h1>

<h4>Docent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Proffesor.Id" />
            <div class="form-group">
                <label @*asp-for="Proffesor.Name"*@ class="control-label">Naam</label>
                <input asp-for="Proffesor.Name" class="form-control" />
                <span asp-validation-for="Proffesor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label @*asp-for="Courses"*@ class="control-label">Opleiding</label>
                <select asp-for="CourseID" asp-items="Model.Courses.Select(m => new SelectListItem { Text = m.Name, Value = m.Id.ToString() })"></select>
                <span asp-validation-for="CourseID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Pas aan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug Naar Docenten</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
