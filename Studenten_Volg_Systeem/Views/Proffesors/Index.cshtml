@model IEnumerable<Studenten_Volg_Systeem.ViewModels.StudentListItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Docenten</h1>

<p>
    <a asp-action="Create">Maak Aan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@ Naam
            </th>
            <th>
                Opleiding
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Pas Aan</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
