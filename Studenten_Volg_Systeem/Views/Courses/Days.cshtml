@model IEnumerable<Studenten_Volg_Systeem.ViewModels.LessonListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Lesdagen van @ViewBag.coursename</h1>

<p>
    <a asp-action="Create">Voeg een dag toe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@Datum
            </th>
            <th>
                Dag
            </th>
            <th>
                Week
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Week)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

<a asp-action="Index">Terug naar opleidingen</a>
