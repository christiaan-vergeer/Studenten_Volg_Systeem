@model Studenten_Volg_Systeem.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Verwijderen Student</h1>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    @*<h4>Student</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Firstname)*@Voornaam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Middelname)*@Tussen Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Middelname)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Lastname)*@Achternaam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Adress)*@ Adress
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            Opleiding
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar Studenten</a>
    </form>
</div>
